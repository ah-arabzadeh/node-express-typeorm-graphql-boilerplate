{
    "env": {
        "browser": false,
        "node": true,
        "es2018": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:security/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "es2018"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": [
            "error"
        ],
        "@typescript-eslint/explicit-function-return-type": [
            "error"
        ],
        "no-console": "warn",
        "curly": ["error", "all"],
        "quotes": ["error", "double"]
    }
}